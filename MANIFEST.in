# Include important files in the package
include README.md
# License handled differently to avoid metadata conflicts
include CHANGELOG.md
include requirements.txt
include requirements-dev.txt

# Include package data
recursive-include contextgraph *.py
recursive-include contextgraph py.typed

# Include examples only (tests excluded from distribution)
recursive-include examples *.py *.csv *.md

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*
global-exclude .pytest_cache
